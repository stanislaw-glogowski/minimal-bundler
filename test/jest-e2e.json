{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/entry-point/(.*)": "<rootDir>/../libs/entry-point/src/$1",
    "@app/entry-point": "<rootDir>/../libs/entry-point/src",
    "@app/logger/(.*)": "<rootDir>/../libs/logger/src/$1",
    "@app/logger": "<rootDir>/../libs/logger/src",
    "@app/network/(.*)": "<rootDir>/../libs/network/src/$1",
    "@app/network": "<rootDir>/../libs/network/src",
    "@app/relayer/(.*)": "<rootDir>/../libs/relayer/src/$1",
    "@app/relayer": "<rootDir>/../libs/relayer/src",
    "@app/utils/(.*)": "<rootDir>/../libs/utils/src/$1",
    "@app/utils": "<rootDir>/../libs/utils/src"
  }
}
